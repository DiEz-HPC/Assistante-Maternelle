{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('contact') }}
{% endblock %}

{{ form_start(form) }}
<div id="contact" class="contact form col px-4 px-sm-5 px-lg-0 offset-lg-4 col-lg-4 my-5">
    <h2 class="text-center mb-5">{{ "Contactez moi" | upper }}</h2>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="col-12 d-flex justify-content-between">
        <div class="mb-3 col-6">
            <div class="pe-3">
                {{ form_label(form.lastname, "Nom :" | upper) }}
                {{ form_widget(form.lastname, {
                    attr: {
                        placeholder: "Votre nom",
                        class: "input-form"
                    }
                }) }}
            </div>
        </div>
        <div class="mb-3 col-6">
            <div>
                {{ form_label(form.firstname, "Prénom :" | upper) }}
                {{ form_widget(form.firstname, {
                    attr: {
                        placeholder: "Votre prénom",
                        class: "input-form"
                    }
                }) }}
            </div>
        </div>
    </div>
    <div class="mb-3">
        {{ form_label(form.email, "Email :" | upper) }}
        {{ form_widget(form.email, {
            attr: {
                placeholder: "Votre email",
                class: "input-form"
            }
        }) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.object, "Objet :" | upper) }}
        {{ form_widget(form.object, {
            attr: {
                placeholder: "Objet de votre message",
                class: "input-form"
            }
        }) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.message, "Message :" | upper) }}
        {{ form_widget(form.message, {
            attr: {
                placeholder: "Votre message",
                class: "input-form",
                rows: "7"
            }
        }) }}
    </div>
    <div class="d-flex justify-content-center">
        <button class="p-3 d-flex justify-content-center"><i class="fa-solid fa-paper-plane"></i></button>
    </div>
</div>
{{ form_end(form) }}
