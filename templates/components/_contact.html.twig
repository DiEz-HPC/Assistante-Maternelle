{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form, {
    attr: {
        id: 'contact',
    }
}) }}
<div class="contact form col px-4 px-sm-5 px-lg-0 offset-lg-4 col-lg-4 my-5" id="Contact">
    <h2 id="title-contact" class="text-center mb-5" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="0" data-aos-once="true" data-aos-anchor-placement="top-bottom">{{ "Contactez moi" | upper }}</h2>
    <div id="message-success" class="flash-message alert alert-success"></div>
    <div id="message-errors" class="flash-message alert alert-danger"></div>
    <div class="col-12 d-flex justify-content-between">
        <div class="mb-3 col-6">
            <div class="pe-3" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="300" data-aos-once="true" data-aos-anchor-placement="top-bottom">
                {{ form_label(form.lastname, "Nom :" | upper) }}
                {{ form_widget(form.lastname, {
                    attr: {
                        placeholder: "Votre nom",
                        class: "input-form",
                    }
                }) }}
            </div>
        </div>
        <div class="mb-3 col-6">
            <div data-aos="fade-up" data-aos-duration="1000" data-aos-delay="300" data-aos-once="true" data-aos-anchor-placement="top-bottom">
                {{ form_label(form.firstname, "Prénom :" | upper) }}
                {{ form_widget(form.firstname, {
                    attr: {
                        placeholder: "Votre prénom",
                        class: "input-form",
                    }
                }) }}
            </div>
        </div>
    </div>
    <div class="mb-3" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="600" data-aos-once="true" data-aos-anchor-placement="top-bottom">
        {{ form_label(form.email, "Email :" | upper) }}
        {{ form_widget(form.email, {
            attr: {
                placeholder: "Votre email",
                class: "input-form",
            }
        }) }}
    </div>
    <div class="mb-3" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="900" data-aos-once="true" data-aos-anchor-placement="top-bottom">
        {{ form_label(form.object, "Objet :" | upper) }}
        {{ form_widget(form.object, {
            attr: {
                placeholder: "Objet de votre message",
                class: "input-form",
            }
        }) }}
    </div>
    <div class="mb-3" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="1100" data-aos-once="true" data-aos-anchor-placement="top-bottom">
        {{ form_label(form.message, "Message :" | upper) }}
        {{ form_widget(form.message, {
            attr: {
                placeholder: "Votre message",
                class: "input-form",
                rows: "7",
            }
        }) }}
    </div>
    <div class="d-flex justify-content-center" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="1400" data-aos-once="true" data-aos-anchor-placement="top-bottom">
        <button class="d-flex justify-content-center align-items-center"><i class="fa-solid fa-paper-plane"></i></button>
    </div>
</div>
{{ form_end(form) }}

